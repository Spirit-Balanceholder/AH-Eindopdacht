<Window x:Class="WebWinkel2._0.Views.AdminStartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AdminStartWindow" Height="300" Width="300" DataContext="{Binding Manager, Source={StaticResource Locator}}">



    <Grid>
        <StackPanel Margin="0,0,0,20">
           
            <Button Command="{Binding ShowProductEditCommand}" Height="50" Content="Bewerk Producten"/>
            <Button Command="{Binding ShowAfdelingEditCommand}" Height="50" Content="Bewerk Afdelingen"/>
            <Button Command="{Binding ShowMerkEditCommand}" Height="50" Content="Bewerk Merken"/>
            <Button Command="{Binding ShowEindproductEditCommand}" Height="50" Content="Bewerk Eindproducten"/>    
            <Button Command="{Binding ShowReceptEditCommand}" Height="50" Content="Bewerk Recepten"/>
         
        </StackPanel>
    </Grid>
</Window>
