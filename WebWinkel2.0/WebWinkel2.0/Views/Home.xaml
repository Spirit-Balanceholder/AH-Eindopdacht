<Window x:Class="WebWinkel2._0.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Home" Height="266" Width="310"
        DataContext="{Binding Source={StaticResource Locator}, Path=Manager}"     >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.ColumnSpan="2" Source="/WebWinkel2.0;component/AHApp.png"></Image>
        <Button Command="{Binding ShowAfdelingWindowCommand}" 
                Grid.Row="1" Grid.RowSpan="2" >
            Boodschappenlijst
        </Button>

        <Button Command="{Binding asdsadasdasd}" 
               Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Margin="5,0,0,0">
            Recepten
        </Button>
    </Grid>
</Window>
