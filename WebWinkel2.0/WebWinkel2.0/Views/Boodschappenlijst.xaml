<Window x:Class="WebWinkel2._0.Views.Cart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Boodschappenlijstje" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Column="1" Margin="10 2 10 2" AutoGenerateColumns="False"
            ItemsSource="{Binding Boodschappenlijst}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Aantal"
                Binding="{Binding Naam}"/>
                <DataGridTextColumn Header="Naam"
                Binding="{Binding Naam}" Width="300" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="2" Margin="10 2 10 2">Verwijder</Button>
            <Button Name="btnOk" Click="btnOk_Click" Grid.Row="2" Grid.Column="2" Margin="10 2 10 2">Ok</Button>
        </Grid>
    </Grid>
</Window>
