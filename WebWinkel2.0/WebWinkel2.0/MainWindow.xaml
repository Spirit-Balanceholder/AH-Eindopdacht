<Window x:Class="WebWinkel2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:local="clr-namespace:WebWinkel2._0"
         xmlns:model="clr-namespace:WebWinkel2._0.Model"
        xmlns:viewmodel="clr-namespace:WebWinkel2._0.ViewModel"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <viewmodel:AfdelingListViewModel />
    </Window.DataContext>





    <DataGrid AutoGenerateColumns="False"
    ItemsSource="{Binding afdelingen}" Margin="5">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Id"
    Binding="{Binding AfdelingId}" />
            <DataGridTextColumn Header="Name"
    Binding="{Binding Naam}" Width="300" />
            
        </DataGrid.Columns>
    </DataGrid>





</Window>
